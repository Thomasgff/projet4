{% extends 'base.html.twig' %}



{% block title %}{{ logement }}{% endblock %}

{% block body %}

    <main id="main">
        <div class="container">
            <article class="mb-4 mb-md-5">
                <header>
                    <div class="row align-items-end">
                        <div class="w-100 pt-3 mb-3 mb-md-0 border-bottom border-line border-md-0 d-flex align-items-start justify-content-between">
                            <div class="w-100">
                                <h1 class="mb-1">
                                    {{ logement.typologie }} - {{ logement.capacite }} personnes
                                </h1>
                                <div class="d-flex align-items-center justify-content-between px-2">
                                    <span>{{ logement.ville }} - {{ logement.region }}</span>
                                    <div class="d-none d-md-flex">
                                        <div class="d-flex flex-wrap align-items-center ">
                                            <div class="text-dark my-lg-0 my-1 ml-lg-2 ml-1 small">Référence: {{ logement.reference }}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>   
                    </div>
                </header>
                <main>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-8 pt-2">
                                <div id="carouselExample" class="carousel slide">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                        <img src="..\images\carroussel1.png" class="d-block w-100" alt="...">
                                        </div>
                                        <div class="carousel-item">
                                        <img src="..\images\carroussel2.png" class="d-block w-100" alt="...">
                                        </div>
                                        <div class="carousel-item">
                                        <img src="..\images\carroussel3.png." class="d-block w-100" alt="...">
                                        </div>
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-4 pt-2">
                                <!-- SECTION BOOKING -->
                                <section class="card shadow border-0 mb-3 mb-md-4">
                                    <header class="text-light bg-dark">
                                        <p class=" d-flex justify-content-center align-items-center h4">
                                            <span class="mr-2 p-2">Réservez en toute sécurité</span>
                                        </p>
                                    </header>
                                    <main>
                                        <div class="mb-1 d-flex flex-nowrap">
                                            <div class="">
                                                <p class="mb-0 font-size-1 font-weight-bold p-2">
                                                    Maison 4 personnes
                                                </p>
                                                <p class="p-2 mb-0 small">
                                                    2 pièces - 1 chambre - 45 m²
                                                </p>
                                            </div>
                                        </div>
                                        <div class="mb-2">
                                            <form class="p-2">                                                  
                                                <div id="stockageDispos" style=display:none data-my-variable="{{ logement.dispos|json_encode }}"></div>
                                                <div id="stockagePrix" style=display:none data-my-variable="{{ logement.prix }}"></div>
                                                <div id="stockageLatitude" style=display:none data-my-variable="{{ logement.latitude }}"></div>
                                                <div id="stockageLongitude" style=display:none data-my-variable="{{ logement.longitude }}"></div>
                                                <div class="mb-3">
                                                    <label for="checkin" class="form-label">Check-in Date:</label>
                                                    <input type="text" class="form-control" id="checkin">
                                                </div>
                                                <div class="mb-3">
                                                    <label for="checkout" class="form-label">Check-out Date:</label>
                                                    <input type="text" class="form-control" id="checkout">
                                                <div class="mb-3">
                                        </div>
                                        <div class="flex align-item-center">
                                            <div class="d-flex text-center text-success fs-4 justify-content-center">
                                                <span id="prixFinal">-</span>
                                                <div class="vr border mx-3"></div>
                                                <span id="nbNuits">- nuits</span>
                                            </div>
                                        </div>
                                    </main>
                                    <footer class="text-center pb-2 px-2">
                                        <a href="{{ path('logement', { reference: logement.reference }) }}" class="col-12 btn btn-sm btn-success rounded text-center py-2" href="">Réserver</a>
                                    </footer>
                                </section>   
                            </div>
                        <div>
                    </div>
                    <h3>Positionnement géographique de votre location</h3>
                    <!--The div element for the map -->
                    <div id="map"></div>
                </main>
            </article>
        <div>  
    </main>


{% endblock %}

{% block scriptsSpe %}
         <script src="../js/listing.js"></script>   
{% endblock %}

