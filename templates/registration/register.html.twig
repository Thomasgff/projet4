{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block background %}
    <body style="background-color: #1048A5;">
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <main id="loginContent">
        <section>
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-xl-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="row g-0">
                                <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                    alt="login form" class="img-fluid p-2" style="border-radius: 1rem 0 0 1rem;" />
                                </div>
                                <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                    <div class="card-body p-1 p-lg-2 text-black">
                                        {{ form_start(registrationForm) }}
                                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Créer un compte</h5>
                                            <div class="form-outline mb-4">
                                                {{ form_label(registrationForm.nickname, null, {'label': "Saisissez votre identifiant : ", 'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(registrationForm.nickname, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            </div>
                                            <div class="form-outline mb-4">
                                                {{ form_label(registrationForm.email, null, {'label': "Saisissez votre email : ", 'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            </div>
                                            <div class="form-outline mb-4">
                                                {{ form_label(registrationForm.plainPassword.first, null, {'label': "Saisissez le mot de passe : ", 'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control form-control-lg mb-1', 'type': "password"}}) }}
                                            </div>
                                            <div class="form-outline mb-4">
                                                {{ form_label(registrationForm.plainPassword.second, null, {'label': "Répétez le mot de passe : ", 'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control form-control-lg mb-1', 'type': "password"}}) }}
                                            </div>
                                            <div class="form-outline mb-4">
                                                {{ form_label(registrationForm.agreeTerms, null, {'label': "J'accepte les termes d'utilisations : ", 'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mb-1'}}) }}
                                            </div>
                                            {{ form_errors(registrationForm) }} 
                                            <div class="pt-1 mb-4">
                                                <button class="btn btn-success btn-lg btn-block" type="submit">S'inscrire</button>
                                            </div>
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                            <input type="hidden" name="_target_path" value="/">
                                        {{ form_end(registrationForm) }}  
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
   
{% endblock %}